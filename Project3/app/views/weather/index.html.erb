<h1 class= page-header>Welcome to Rooby Weather!</h1>

<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<%= javascript_include_tag "path/to/highcharts.js", "chartkick" %>


<div class=" row col-md-12">

	<h3 class="text-center"> A site to help you easily navigate Victorian weather observations!</h3>
	<br>
	<br><br>

</div>

 <div class="row">
	<div class="col-md-6">
		<h4  class="text-center"><b> Search for Stations</b></h4>
		<hr>
		<p class="text-center">Search through Stations!</p>
		<%= render 'form_location'%>
	</div>
	<div class="col-md-6">
		<h4  class="text-center"><b> Search for Postcodes</b></h4>
		<hr>
		<p class="text-center">Search through Postcodes!</p>
		<%= render 'form_postcode'%>
	</div>
</div>
<div class="row ">
	<br><br><br><br>
	<h3 class="text-center">Victorian weather predictions made easy!</h3>

	<br><br>

	
	<%= line_chart @average_temperature, id:"Average Temperature", height: "500px"%>
	<h4 class="text-center">Melbourne Airport Temperature &#8451;</h4>
	<br><br><br><br>
</div>

<div class="row">
	<div class="col-md-6">
		<h4  class="text-center"><b> Predict Weather forecasts for exact locations</b></h4>
		<hr>
		<p class="text-center">Latitude, Longitude</p>
		<%= render 'form_lat_lon'%>
	</div>
	<div class="col-md-6">
		<h4  class="text-center"><b> Predict Weather forecasts for a postcode</b></h4>
		<hr>
		<p class="text-center">Enter any Victorian postcode</p>
		<%= render 'form_postcode_period'%>
	</div>
</div>

<br><br><br><br><br><br><br><br>